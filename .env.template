# NB-2 Project Environment Variables
# Copy this file to .env and update the values as needed

# ==================== API Keys ====================
# Google Gemini API Key (recommended for best performance)
GEMINI_API_KEY=your-gemini-api-key-here

# Google Gemini API Key (required for Gemini models in testing)
GEMINI_API_KEY=your-gemini-api-key-here

# ==================== Database Configuration ====================
# PostgreSQL Configuration (used by docker-compose)
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=nb2
DATABASE_URL=postgresql://admin:admin@database:5432/nb2

# ==================== Ollama Configuration ====================
# Ollama Base URL (for local LLM inference)
OLLAMA_BASE_URL=http://ollama:11434

# ==================== Frontend Configuration ====================
# Open WebUI Secret Key (change in production)
WEBUI_SECRET_KEY=your-secret-key-change-in-production

# ==================== Telemetry Configuration ====================
# Phoenix Configuration
PHOENIX_HOST=0.0.0.0
PHOENIX_PORT=6006

# ==================== Development Settings ====================
# Debug mode (set to true for development)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ==================== Production Settings ====================
# Set to true in production
PRODUCTION=false

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==================== Testing Configuration ====================
# Server URL for testing
SERVER_URL=http://server:8000

# Results directory for test outputs
RESULTS_DIR=/app/results